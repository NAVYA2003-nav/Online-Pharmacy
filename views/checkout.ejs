<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout - Online Pharmacy</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <!-- Navbar -->
  <%- include('partials/navbar', { page: 'checkout' }) %>

  <div class="container mt-5">
    <h2 class="text-center mb-4">ðŸ’Š Checkout</h2>

    <div class="row">
      <!-- Order Summary -->
      <div class="col-md-6">
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-primary text-white">ðŸ›’ Order Summary</div>
          <div class="card-body">
            <% if (cart && cart.length > 0) { %>
              <ul class="list-group">
                <% cart.forEach(item => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><strong><%= item.name %></strong> x <%= item.quantity %></span>
                    <span>â‚¹<%= item.price * item.quantity %></span>
                  </li>
                <% }) %>
              </ul>
              <div class="mt-3 text-end">
                <h5>Total: <span class="text-success fw-bold">â‚¹<%= cart.reduce((acc, item) => acc + (item.price * item.quantity), 0) %></span></h5>
              </div>
            <% } else { %>
              <p class="text-muted">Your cart is empty.</p>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Checkout Form -->
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-header bg-success text-white">ðŸ“‹ Shipping Details</div>
          <div class="card-body">
            <form action="/checkout" method="POST">
              <div class="mb-3">
                <label for="name" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
              </div>
              <div class="mb-3">
                <label for="address" class="form-label">Address</label>
                <textarea class="form-control" id="address" name="address" rows="3" required></textarea>
              </div>
              <div class="mb-3">
                <label for="payment" class="form-label">Payment Method</label>
                <select class="form-select" id="payment" name="payment" required>
                  <option value="cod">Cash on Delivery</option>
                  <option value="card">Credit/Debit Card</option>
                  <option value="upi">UPI</option>
                </select>
              </div>
                <div class="mb-3">
    <label for="prescription" class="form-label">Upload Prescription (if required)</label>
    <input type="file" name="prescription" class="form-control" accept="image/*">
  </div>

              <button type="submit" class="btn btn-success w-100">âœ… Place Order</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
