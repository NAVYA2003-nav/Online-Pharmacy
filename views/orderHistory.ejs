<!DOCTYPE html>
<html>
<head>
  <title>Order History</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h2 class="mb-4 text-center">ðŸ›’ Your Order History</h2>

    <!-- âœ… Filter Form -->
    <form method="GET" action="/orders/history" class="row g-3 mb-4">
      <div class="col-md-3">
        <select name="month" class="form-select">
          <option value="">Select Month</option>
          <% for (let m = 1; m <= 12; m++) { %>
            <option value="<%= m %>" <%= (query.month == m) ? "selected" : "" %>><%= m %></option>
          <% } %>
        </select>
      </div>
      <div class="col-md-3">
        <select name="year" class="form-select">
          <option value="">Select Year</option>
          <% const currentYear = new Date().getFullYear(); %>
          <% for (let y = currentYear; y >= currentYear - 5; y--) { %>
            <option value="<%= y %>" <%= (query.year == y) ? "selected" : "" %>><%= y %></option>
          <% } %>
        </select>
      </div>
      <div class="col-md-3">
        <select name="payment" class="form-select">
          <option value="">Payment Method</option>
          <option value="Cash" <%= (query.payment === "Cash") ? "selected" : "" %>>Cash</option>
          <option value="Card" <%= (query.payment === "Card") ? "selected" : "" %>>Card</option>
          <option value="UPI" <%= (query.payment === "UPI") ? "selected" : "" %>>UPI</option>
        </select>
      </div>
      <div class="col-md-3">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
      </div>
    </form>
    <!-- âœ… End Filter Form -->

    <% if (typeof message !== "undefined" && message) { %>
      <div class="alert alert-warning text-center"><%= message %></div>
    <% } else if (orders.length > 0) { %>
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Date</th>
            <th>Name</th>
            <th>Address</th>
            <th>Payment</th>
            <th>Total</th>
            <th>Action</th> <!-- âœ… New Column -->
          </tr>
        </thead>
        <tbody>
          <% orders.forEach((order, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= order.order_date.toLocaleString() %></td>
              <td><%= order.name %></td>
              <td><%= order.address %></td>
              <td><%= order.payment %></td>
              <td>â‚¹<%= order.total.toFixed(2) %></td>
              <td>
                <!-- âœ… Reorder Button -->
                <a href="/orders/reorder/<%= order.id %>" class="btn btn-sm btn-success">Reorder</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

    <div class="text-center mt-3">
      <a href="/" class="btn btn-primary">â¬… Back to Home</a>
    </div>
  </div>
</body>
</html>
