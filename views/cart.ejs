<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Cart - Online Pharmacy</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .cart-item-img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 10px;
    }
    .cart-card {
      border-radius: 15px;
      box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
    }
    .btn-checkout {
      background-color: #ff4081;
      border: none;
    }
    .btn-checkout:hover {
      background-color: #e91e63;
    }
    .qty-btn {
      width: 35px;
      height: 35px;
      text-align: center;
      padding: 0;
      font-size: 18px;
      font-weight: bold;
    }
    .stock-warning {
      font-size: 12px;
      color: red;
      display: block;
      margin-top: 4px;
    }
  </style>
</head>
<body>
 <%- include('partials/navbar', { page: 'cart' }) %>

  <div class="container mt-5">
    <h2 class="mb-4 text-center">üõí Your Shopping Cart</h2>

    <% if (cart.length === 0) { %>
      <div class="alert alert-info text-center">
        Your cart is empty. <a href="/products" class="alert-link">Shop now!</a>
      </div>
    <% } else { %>
      <div class="card cart-card p-4">
        <table class="table align-middle text-center">
          <thead class="table-light">
            <tr>
              <th>Product</th>
              <th>Name</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Subtotal</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% let total = 0; %>
            <% cart.forEach(item => { 
                 let subtotal = Number(item.price) * item.quantity;
                 total += subtotal;
            %>
              <tr>
                <td><img src="<%= item.image %>" alt="<%= item.name %>" class="cart-item-img"></td>
                <td><%= item.name %></td>
                <td>‚Çπ<%= Number(item.price).toFixed(2) %></td>
                <td>
                  <div class="d-flex flex-column justify-content-center align-items-center">
                    <div class="d-flex align-items-center">
                      <form action="/cart/decrease/<%= item.id %>" method="post" class="me-2">
                        <button type="submit" class="btn btn-outline-secondary btn-sm qty-btn">-</button>
                      </form>
                      <span class="mx-2"><%= item.quantity %></span>
                      <form action="/cart/increase/<%= item.id %>" method="post" class="ms-2">
                        <button type="submit" class="btn btn-outline-secondary btn-sm qty-btn"
                          <% if (item.quantity >= item.stock) { %> disabled <% } %> >+</button>
                      </form>
                    </div>
                    <% if (item.quantity >= item.stock) { %>
                      <span class="stock-warning">‚ö†Ô∏è Max stock reached</span>
                    <% } %>
                  </div>
                </td>
                <td>‚Çπ<%= Number(subtotal).toFixed(2) %></td>
                <td>
                  <a href="/cart/remove/<%= item.id %>" class="btn btn-sm btn-danger">Remove</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-4">
          <h4>Total: ‚Çπ<%= Number(total).toFixed(2) %></h4>
         <a href="/checkout" class="btn btn-success">Proceed to Checkout</a>

        </div>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
